<div class="chica{% if big == true %} chica-grande{% endif %}{% if right == true %} grande-derecha{% endif %}">
    <a class="link" href="#" title="{{ girl.thumbnail1.value }}">
        {% if big == true %}
            {% set rand = random(1,3) %}
            {% set thumbnail = 'thumb-grande-0' ~ rand ~ '.jpg' %}
        {% else %}
            {% set rand = random(1,10) %}
            {% set space = '' %}
            {%  if rand < 10 %}
                {% set space = '0' %}
            {% endif %}
            {% set thumbnail = 'thumb-' ~ space ~ rand ~ '.jpg' %}
        {% endif %}
        <span class="thumb"><img src="images/{{ thumbnail }}" width="175" height="150" alt="" title="{{ girl.nick.value }}" /></span>
        <span class="nombre-chica"> <span class="ico-online"></span> {{ girl.nick.value }}</span>
        <span id="favorito" class="ico-favorito" ></span>
    </a>
</div>
